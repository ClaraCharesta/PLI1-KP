<!DOCTYPE html>
<html lang="id">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Home - PLI 1 Maintenance</title>

  <link rel="stylesheet" href="/css/layout.css">
  <link rel="stylesheet" href="/css/topbar.css">
  <link rel="stylesheet" href="/css/sidebar.css">
  <link rel="stylesheet" href="/css/home.css">
</head>
<body>

  <%- include('partials/sidebar') %>

  <div class="main">
    <%- include('partials/topbar') %>

    <div class="content">

      <!-- HEADER -->
      <div class="header-box">
        <div class="search-box">
          <input type="text" id="searchInput" placeholder="Search menu...">
          <button id="btnSearch" type="button">Search</button>
        </div>
      </div>

      <!-- CARDS GRID -->
      <div class="cards-grid">

        <!-- Card 1: Data BM & CM -->
        <div class="card" data-route="/dataBMCM">
          <div class="card-icon">
            <img src="/img/Menu_BMCM.png" alt="Data BM & CM">
          </div>
          <h3 class="card-title">Data BM & CM IND 5</h3>
        </div>

        <!-- Card 2: Data BM & CM PPI 5 -->
        <div class="card" data-route="/dataBMCMPPI">
          <div class="card-icon">
            <img src="/img/Menu_Data BMCM PPI.png" alt="Data BM & CM PPI">
          </div>
          <h3 class="card-title">Data BM & CM PPI</h3>
        </div>

        <!-- Card 3: Data Abnormalitas -->
        <div class="card" data-route="/dataAbnormalitas">
          <div class="card-icon">
            <img src="/img/Menu_Abnormalitas.png" alt="Data Temuan Inspeksi">
          </div>
          <h3 class="card-title">Data Temuan Inspeksi</h3>
        </div>

        <!-- Card 4: Laporan PLI RM & FM 5 -->
        <div class="card" data-route="/RMFM5">
          <div class="card-icon">
            <img src="/img/Menu_LaporanRM&FM.png" alt="Laporan PLI RM & FM 5">
          </div>
          <h3 class="card-title">Laporan PLI RM & FM 5</h3>
        </div>

        <!-- Card 5: Laporan Shift KCM -->
        <div class="card" data-route="/KCM5">
            <div class="card-icon">
                <img src="/img/Menu_LaporanShiftKCM.png" alt="Laporan Shift KCM">
            </div>
            <h3 class="card-title">Laporan Shift KCM</h3>
        </div>


      </div>

    </div>
  </div>

  <script src="/js/home.js"></script>
</body>
</html>
