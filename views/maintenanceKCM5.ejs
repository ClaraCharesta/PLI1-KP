<!DOCTYPE html>
<html lang="id">
<head>
<meta charset="UTF-8">
<title>Maintenance KCM 5</title>

<link rel="stylesheet" href="/css/layout.css">
<link rel="stylesheet" href="/css/sidebar.css">
<link rel="stylesheet" href="/css/topbar.css">
<link rel="stylesheet" href="/css/maintenanceKCM5.css">
</head>
<body>

<%- include('partials/sidebar') %>

<div class="main">
  <%- include('partials/topbar', { title: title }) %>


  <div class="content">
    <div class="form-card">

      <div class="form-group">
        <label>Rute BM</label>
        <select id="ruteBM">
          <option value="">None</option>
        </select>
        <input type="text" id="ruteLainnya" placeholder="Isi rute lainnya" hidden>
      </div>

      <div class="form-group">
        <label>Status</label>
        <select id="status">
          <option value="">None</option>
          <option>Terlaksana Semua</option>
          <option>Terlaksana Sebagian</option>
          <option>Tidak Terlaksana</option>
        </select>
      </div>

      <div class="form-group">
        <label>Tanggal</label>
        <input type="date" id="tanggal">
      </div>

      <div class="form-group">
        <label>Jam Mulai</label>
        <input type="time" id="mulai" step="1">
      </div>

      <div class="form-group">
        <label>Jam Selesai</label>
        <input type="time" id="selesai" step="1">
      </div>

      <div class="form-group">
        <label>Kendala</label>
        <textarea id="kendala"></textarea>
      </div>

      <div class="btn-wrapper">
            <div class="btn">
                <button class="back" type="button">Back</button>
                <button class="clear">Clear</button>
                <button class="save">Save</button>
            </div>
    </div>

    </div>
  </div>
</div>

<script>
  const menuToggle = document.getElementById('menuToggle');
  const sidebar = document.querySelector('.sidebar');
  const main = document.querySelector('.main');

  menuToggle.addEventListener('click', () => {
    sidebar.classList.toggle('closed');
    main.classList.toggle('expanded');
  });
</script>

<script src="/js/sidebar.js"></script>
<script src="/js/maintenanceKCM5.js"></script>
</body>
</html>
