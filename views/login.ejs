<!DOCTYPE html>
<html lang="id">
<head>
  <meta charset="UTF-8">
  <title>Login PLI 1</title>
  <link rel="stylesheet" href="/css/global.css">
  <link rel="stylesheet" href="/css/login.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
</head>
<body>
  <div class="container">

    <!-- KIRI -->
    <div class="left">
      <h2>Sistem Informasi<br>PLI 1 PT. Semen Padang</h2>
      <img src="/img/Logo_SP.png" alt="Logo Semen Padang">
    </div>

    <!-- KANAN -->
    <div class="right">
      <h1>Selamat Datang</h1>

      <!-- FORM LOGIN -->
      <form action="/login" method="POST">
        <label>Email</label>
        <input 
          type="email" 
          name="email"
          placeholder="Masukkan email"
          required
        >

        <label>Password</label>
        <div class="password-wrapper">
          <input 
            type="password" 
            id="password" 
            name="password"
            placeholder="Masukkan password"
            required
          >
          <i id="togglePassword" class="fa-solid fa-eye eye"></i>
        </div>

        <!-- ERROR MESSAGE (TIDAK GANGGU CSS) -->
        <% if (typeof error !== "undefined") { %>
          <p style="color:red; margin-top:10px; font-size:14px;">
            <%= error %>
          </p>
        <% } %>

        <a href="#" class="forgot">Lupa Password ?</a>

        <button type="submit">Sign In</button>
      </form>
    </div>

  </div>

  <script src="/js/main.js"></script>
</body>
</html>
