<!DOCTYPE html>
<html lang="id">
<head>
<meta charset="UTF-8">
<title>Laporan Shift KCM 5</title>

<link rel="stylesheet" href="/css/layout.css">
<link rel="stylesheet" href="/css/sidebar.css">
<link rel="stylesheet" href="/css/topbar.css">
<link rel="stylesheet" href="/css/sttKCM5.css">
</head>
<body>

<%- include('partials/sidebar') %>

<div class="main">
  <%- include('partials/topbar', { title: "Laporan Shift KCM 5" }) %>

  <div class="content">
    <div class="form-card">

      <div class="form-group">
        <label>Radio Comm<span></span></label>
        <input type="text" id="radioComm">
      </div>

      <div class="form-group">
        <label>Kunci Mobil<span></span></label>
        <select id="kunciMobil">
          <option value="">None</option>
        </select>
      </div>

      <div class="form-group">
        <label>Kunci Motor<span></span></label>
        <select id="kunciMotor">
          <option value="">None</option>
        </select>
      </div>

      <div class="form-group">
        <label>Kunci Subst<span></span></label>
        <select id="kunciSubst">
          <option value="">None</option>
        </select>
      </div>

      <div class="form-group">
        <label>Toolset<span></span></label>
        <select id="toolset">
          <option value="">None</option>
        </select>
      </div>

      <div class="btn-wrapper">
        <div class="btn">
          <button class="back" type="button">Back</button>
          <button class="clear" type="button">Clear</button>
          <button class="save" type="button">Save</button>
        </div>
      </div>

    </div>
  </div>
</div>

<script>
  const menuToggle = document.getElementById('menuToggle');
  const sidebar = document.querySelector('.sidebar');
  const main = document.querySelector('.main');

  menuToggle.addEventListener('click', () => {
    sidebar.classList.toggle('closed');
    main.classList.toggle('expanded');
  });
</script>

<script src="/js/sidebar.js"></script>
<script src="/js/sttKCM5.js"></script>
</body>
</html>
