<!DOCTYPE html>
<html lang="id">
<head>
<meta charset="UTF-8">
<title>Serah Terima Tool KCM 5</title>

<link rel="stylesheet" href="/css/layout.css">
<link rel="stylesheet" href="/css/sidebar.css">
<link rel="stylesheet" href="/css/topbar.css">
<link rel="stylesheet" href="/css/sttKCM5.css">
</head>

<body>

<%- include('partials/sidebar') %>

<div class="main">
  <%- include('partials/topbar', { title: "Serah Terima Tool KCM 5" }) %>

  <div class="content">

    <!-- ================= FORM STT ================= -->
    <form id="sttForm"
          method="POST"
          action="/laporan-shift/kcm5/stt/save"
          class="form-card">

      <!-- Hidden No Ref -->
      <input type="hidden" name="no_ref" value="<%= no_ref %>">

      <!-- Radio Comm -->
      <div class="form-group">
        <label>Radio Comm</label>
        <input type="text" name="radioComm" required>
      </div>

      <!-- Kunci Mobil -->
      <div class="form-group">
        <label>Kunci Mobil</label>
        <select name="kunciMobil" required>
          <option value="">None</option>
          <option>Ada</option>
          <option>Tidak Ada</option>
        </select>
      </div>

      <!-- Kunci Motor -->
      <div class="form-group">
        <label>Kunci Motor</label>
        <select name="kunciMotor" required>
          <option value="">None</option>
          <option>Ada</option>
          <option>Tidak Ada</option>
        </select>
      </div>

      <!-- Kunci Subst -->
      <div class="form-group">
        <label>Kunci Subst</label>
        <select name="kunciSubst" required>
          <option value="">None</option>
          <option>Lengkap</option>
          <option>Tidak Lengkap</option>
        </select>
      </div>

      <!-- Toolset -->
      <div class="form-group">
        <label>Toolset</label>
        <select name="toolset" required>
          <option value="">None</option>
          <option>Lengkap</option>
          <option>Tidak Lengkap</option>
        </select>
      </div>

      <!-- BUTTON -->
      <div class="btn-wrapper">
        <button type="button" class="back">Back</button>
        <button type="reset" class="clear">Clear</button>
        <button type="submit" class="save">Save</button>
      </div>

    </form>
    <!-- ================= END FORM ================= -->

  </div>
</div>

<script>
  // Sidebar toggle
  const menuToggle = document.getElementById('menuToggle');
  const sidebar = document.querySelector('.sidebar');
  const main = document.querySelector('.main');

  if(menuToggle){
    menuToggle.addEventListener('click', () => {
      sidebar.classList.toggle('closed');
      main.classList.toggle('expanded');
    });
  }

  // BACK → kembali ke laporan detail
  document.querySelector(".back").onclick = () => {
    window.location.href =
      "/laporan-shift/kcm5/detail?noref=<%= no_ref %>";
  };

  // CLEAR → reset form
  document.querySelector(".clear").onclick = () => {
    document.getElementById("sttForm").reset();
  };
</script>

<script src="/js/sidebar.js"></script>

</body>
</html>
