<!DOCTYPE html>
<html lang="id">
<head>
<meta charset="UTF-8">
<title><%= title %></title>

<link rel="stylesheet" href="/css/layout.css">
<link rel="stylesheet" href="/css/sidebar.css">
<link rel="stylesheet" href="/css/topbar.css">
<link rel="stylesheet" href="/css/pcKCM5.css">
</head>

<body>

<%- include('partials/sidebar') %>

<div class="main">
  <%- include('partials/topbar', { title: title }) %>

  <div class="content">

    <form id="monitorForm"
          class="form-card"
          method="POST"
          action="/laporan-shift/kcm5/monitoring/save">

      <!-- Hidden No Ref -->
      <input type="hidden" name="no_ref" value="<%= no_ref %>">

      <div class="form-group">
        <label>Monitoring</label>
        <textarea
          name="monitoring"
          id="monitoring"
          rows="5"
          placeholder="Masukkan hasil monitoring..."
          required
        ></textarea>
      </div>

      <div class="btn-wrapper">
        <div class="btn">
          <button type="button" class="back">Back</button>
          <button type="button" class="clear">Clear</button>
          <button type="submit" class="save">Save</button>
        </div>
      </div>

    </form>

  </div>
</div>

<script>
  // Sidebar
  const menuToggle = document.getElementById('menuToggle');
  const sidebar = document.querySelector('.sidebar');
  const main = document.querySelector('.main');

  if(menuToggle){
    menuToggle.addEventListener('click', () => {
      sidebar.classList.toggle('closed');
      main.classList.toggle('expanded');
    });
  }

  // BACK â†’ kembali ke detail
document.querySelector('.back').addEventListener('click', () => {
  window.location.href =
    `/laporan-shift/kcm5/detail?noref=<%= no_ref %>`;
});

  // CLEAR
  document.querySelector(".clear").onclick = () => {
    document.getElementById("monitoring").value = "";
  };
</script>

<script src="/js/sidebar.js"></script>
</body>
</html>
